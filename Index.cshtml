@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@* Filter Search Form *@
<form>
    <p>

        Filter by Dept Name :
        <select asp-for="DeptName" asp-items="Model.DeptNames">
            <option value=" ">All Depts</option>
        </select>


        &nbsp;&nbsp; Search string : <input type="text" asp-for="SearchString" />
        &nbsp;&nbsp; <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].State_province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Country_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Department_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Job_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpData[0].Commission_Pct)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmpData)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.State_province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commission_Pct)
            </td>
        </tr>
        }
    </tbody>
</table>


